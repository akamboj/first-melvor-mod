    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch FF",
        "type": "firefox",
        "request": "launch",
        "reAttach": true,
        "addonPath": "${workspaceFolder}",
        "firefoxArgs": ["https://melvoridle.com"]
      },
      {
        "name": "Launch Chrome",
        "type": "chrome",
        "request": "launch",
  
        "runtimeArgs": ["--load-extension=${workspaceFolder}"],
        "url": "https://melvoridle.com"
      }
    ]
  }
  